<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">
 	<Button
 	android:id="@+id/manager_btn_book"
 	android:layout_width="fill_parent"
 	android:layout_height="wrap_content"
 	android:text="书">
 	</Button>
 	<Button
 	android:id="@+id/manager_btn_subject"
 	android:layout_width="fill_parent"
 	android:layout_height="wrap_content"
 	android:text="科目">
 	</Button>
 	<Button
 	android:id="@+id/manager_btn_type"
 	android:layout_width="fill_parent"
 	android:layout_height="wrap_content"
 	android:text="记录类型">
 	</Button>
 	<Button
 	android:id="@+id/manager_btn_cancel"
 	android:layout_width="fill_parent"
 	android:layout_height="wrap_content"
 	android:text="取消">
 	</Button>
</LinearLayout>
